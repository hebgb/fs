<h1>Listing brands</h1>

<table width="100%">
  <tr>
    <th>Name</th>
    <th>Username</th>
    <th>Facebook ID</th>
		<th>Picture</th>
    <th>Link</th>
		<th>Likes</th>
		<th>Category</th>
		<th>Website(s)</th>
		<th>Personal Info</th>
		<th>TAC</th>
		<th></th>
    <th></th>
    <th></th>
  </tr>

<% @brands.each do |brand| %>
  <tr>
    <td><%= brand.name %></td>
    <td><%= brand.username %></td>
    <td><%= brand.fb_id %></td>
		<td><%= image_tag(brand.picture) %></td>
		<td><%= link_to brand.link, brand.link, :target => '_blank' %></td>
		<td><%= brand.likes %></td>
		<td><%= brand.category %></td>
		<td><%= format_websites brand.website %></td>
		<td><%= brand.personal_info %></td>
		<td><%= brand.talking_about_count %></td>
    <td><%= link_to 'Show', brand %></td>
    <td><%= link_to 'Edit', edit_brand_path(brand) %></td>
    <td><%= link_to 'Destroy', brand, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

